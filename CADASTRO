    <div id="notification" style="display: none; position: fixed; top: 20px; right: 20px; padding: 1rem 1.5rem; border-radius: 5px; color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.2); z-index: 1000;"></div>

    <script>
        // Configuração do Supabase
        const SUPABASE_URL = 'https://izilgduqnrhdsglfnsuh.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Iml6aWxnZHVxbnJoZHNnbGZuc3VoIiwicm9sZSI6ImFub24iLCJpYXQiOjE3Njc3Mjk1NTksImV4cCI6MjA4MzMwNTU1OX0.mvTGBwZg4vHTCGuwjKNxU-i1NFjr_xINUUDV_4MLP0E';
         
        // Inicializar Supabase
        let supabase;
        let isSupabaseConnected = false;
        
        // Função para inicializar Supabase
        function initSupabase() {
            try {
                supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
                return true;
            } catch (error) {
                console.error('Erro ao inicializar Supabase:', error);
                return false;
            }
        }
        
        // Função para testar conexão com Supabase
        async function testSupabaseConnection() {
            if (!supabase) return false;
            
            try {
                const { data, error } = await supabase.from('usuarios').select('count').limit(1);
                return true;
            } catch (error) {
                console.warn('Erro na conexão Supabase:', error.message);
                return false;
            }
        }
        
        // Função para formatar CPF
        function formatarCPF(cpf) {
            cpf = cpf.replace(/\D/g, '');
            if (cpf.length === 11) {
                return cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
            }
            return cpf;
        }
        
        // Função para mascarar CPF enquanto digita
        function mascararCPF(input) {
            let value = input.value.replace(/\D/g, '');
            
            if (value.length > 3 && value.length <= 6) {
                value = value.replace(/(\d{3})(\d{0,3})/, '$1.$2');
            } else if (value.length > 6 && value.length <= 9) {
                value = value.replace(/(\d{3})(\d{3})(\d{0,3})/, '$1.$2.$3');
            } else if (value.length > 9) {
                value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{0,2})/, '$1.$2.$3-$4');
            }
            
            input.value = value;
            return value;
        }
        
        // Função para validar CPF
        function validarCPF(cpf) {
            cpf = cpf.replace(/\D/g, '');
            
            if (cpf.length !== 11) return false;
            
            // Verifica se todos os dígitos são iguais
            if (/^(\d)\1{10}$/.test(cpf)) return false;
            
            // Cálculo do primeiro dígito verificador
            let soma = 0;
            for (let i = 0; i < 9; i++) {
                soma += parseInt(cpf.charAt(i)) * (10 - i);
            }
            let resto = soma % 11;
            let digitoVerificador1 = resto < 2 ? 0 : 11 - resto;
            
            if (digitoVerificador1 !== parseInt(cpf.charAt(9))) return false;
            
            // Cálculo do segundo dígito verificador
            soma = 0;
            for (let i = 0; i < 10; i++) {
                soma += parseInt(cpf.charAt(i)) * (11 - i);
            }
            resto = soma % 11;
            let digitoVerificador2 = resto < 2 ? 0 : 11 - resto;
            
            if (digitoVerificador2 !== parseInt(cpf.charAt(10))) return false;
            
            return true;
        }
        
        // Função para validar e-mail
        function validarEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }
        
        // Função para mostrar notificação
        function showNotification(message, type = 'info', duration = 5000) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.display = 'block';
            
            switch(type) {
                case 'success':
                    notification.style.backgroundColor = '#28a745';
                    break;
                case 'error':
                    notification.style.backgroundColor = '#dc3545';
                    break;
                case 'warning':
                    notification.style.backgroundColor = '#ffc107';
                    notification.style.color = '#333';
                    break;
                case 'info':
                default:
                    notification.style.backgroundColor = '#4361ee';
            }
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, duration);
        }
        
        // Função para verificar se usuário já está cadastrado
        async function verificarUsuarioCadastrado(email) {
            if (isSupabaseConnected && supabase) {
                try {
                    const { data: usuarioSupabase, error } = await supabase
                        .from('usuarios')
                        .select('*')
                        .eq('email', email.toLowerCase())
                        .eq('ativo', true)
                        .single();
                    
                    if (!error && usuarioSupabase) {
                        return { cadastrado: true, origem: 'supabase', usuario: usuarioSupabase };
                    }
                } catch (err) {
                    console.warn('Erro ao verificar no Supabase:', err);
                }
            }
            
            // Verificar localmente
            const usuariosLocais = JSON.parse(localStorage.getItem('record_usuarios_cadastrados')) || [];
            const usuarioLocal = usuariosLocais.find(u => u.email === email.toLowerCase() && u.ativo !== false);
            
            if (usuarioLocal) {
                return { cadastrado: true, origem: 'local', usuario: usuarioLocal };
            }
            
            return { cadastrado: false };
        }
        
        // Função para cadastrar usuário no Supabase (com autenticação)
        async function cadastrarUsuarioSupabase(usuarioData) {
            const loading = document.getElementById('cadastroLoading');
            const btnCadastrar = document.getElementById('btnCadastrar');
            
            loading.classList.add('active');
            btnCadastrar.disabled = true;
            
            try {
                // 1. Criar usuário no Supabase Auth
                const { data: authData, error: authError } = await supabase.auth.signUp({
                    email: usuarioData.email.toLowerCase(),
                    password: usuarioData.password,
                    options: {
                        data: {
                            nome_completo: usuarioData.nomeCompleto,
                            cpf: usuarioData.cpfLimpo,
                            cargo: usuarioData.cargo
                        }
                    }
                });
                
                if (authError) throw authError;
                
                // 2. Inserir usuário na tabela usuarios
                const { data, error } = await supabase
                    .from('usuarios')
                    .insert({
                        id: authData.user.id,
                        email: usuarioData.email.toLowerCase(),
                        nome_completo: usuarioData.nomeCompleto,
                        cpf: usuarioData.cpfLimpo,
                        cargo: usuarioData.cargo,
                        matricula: usuarioData.matricula,
                        ativo: true,
                        tipo_usuario: 'funcionario',
                        data_cadastro: new Date().toISOString()
                    });
                
                if (error) throw error;
                
                return { 
                    success: true, 
                    message: 'Usuário cadastrado com sucesso!',
                    userId: authData.user.id,
                    usuario: {
                        id: authData.user.id,
                        email: usuarioData.email.toLowerCase(),
                        nome_completo: usuarioData.nomeCompleto,
                        cpf: usuarioData.cpfLimpo,
                        cargo: usuarioData.cargo,
                        matricula: usuarioData.matricula,
                        ativo: true,
                        tipo_usuario: 'funcionario',
                        data_cadastro: new Date().toISOString()
                    }
                };
                
            } catch (error) {
                console.error('Erro ao cadastrar no Supabase:', error);
                let mensagem = 'Erro ao cadastrar usuário';
                
                if (error.message.includes('User already registered')) {
                    mensagem = 'Este e-mail já está cadastrado';
                } else if (error.message.includes('Password should be at least 6 characters')) {
                    mensagem = 'A senha deve ter pelo menos 6 caracteres';
                }
                
                return { 
                    success: false, 
                    message: mensagem 
                };
            } finally {
                loading.classList.remove('active');
                btnCadastrar.disabled = false;
            }
        }
        
        // Função para cadastrar localmente (fallback)
        function cadastrarUsuarioLocal(usuarioData) {
            const usuarios = JSON.parse(localStorage.getItem('record_usuarios_cadastrados')) || [];
            
            // Verificar se e-mail já existe
            const emailExistente = usuarios.find(u => u.email === usuarioData.email.toLowerCase());
            if (emailExistente) {
                return { success: false, message: 'E-mail já cadastrado no sistema local' };
            }
            
            // Gerar ID único
            usuarioData.id = 'local_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            usuarioData.ativo = true;
            usuarioData.tipo_usuario = 'funcionario';
            usuarioData.data_cadastro = new Date().toISOString();
            usuarioData.nome_completo = usuarioData.nomeCompleto;
            usuarioData.cargo = usuarioData.cargo;
            usuarioData.matricula = usuarioData.matricula;
            
            // Adicionar usuário
            usuarios.push(usuarioData);
            localStorage.setItem('record_usuarios_cadastrados', JSON.stringify(usuarios));
            
            return { 
                success: true, 
                message: 'Usuário cadastrado localmente!',
                usuario: usuarioData
            };
        }
        
        // Inicializar a página
        document.addEventListener('DOMContentLoaded', async function() {
            // 1. Inicializar Supabase
            const supabaseInicializado = initSupabase();
            
            if (supabaseInicializado) {
                // 2. Testar conexão
                isSupabaseConnected = await testSupabaseConnection();
            }
            
            // Verificar se veio com e-mail na URL
            const urlParams = new URLSearchParams(window.location.search);
            const emailParam = urlParams.get('email');
            if (emailParam) {
                document.getElementById('email').value = emailParam;
            }
            
            // Configurar máscara de CPF
            const cpfInput = document.getElementById('cpf');
            if (cpfInput) {
                cpfInput.addEventListener('input', function() {
                    mascararCPF(this);
                });
            }
            
            // Configurar toggle de senha
            function setupPasswordToggle(inputId, toggleId) {
                const input = document.getElementById(inputId);
                const toggle = document.getElementById(toggleId);
                
                if (input && toggle) {
                    toggle.addEventListener('click', function() {
                        const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                        input.setAttribute('type', type);
                        toggle.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
                    });
                }
            }
            
            // Configurar todos os toggles de senha
            setupPasswordToggle('password', 'togglePassword');
            setupPasswordToggle('confirmPassword', 'toggleConfirmPassword');
            
            // Configurar formulário de cadastro
            const cadastroForm = document.getElementById('cadastroForm');
            if (cadastroForm) {
                cadastroForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    // Coletar dados
                    const nomeCompleto = document.getElementById('nomeCompleto').value.trim();
                    const email = document.getElementById('email').value.trim();
                    const cpf = document.getElementById('cpf').value;
                    const password = document.getElementById('password').value;
                    const confirmPassword = document.getElementById('confirmPassword').value;
                    const cargo = document.getElementById('cargo').value.trim();
                    const matricula = document.getElementById('matricula').value.trim();
                    
                    // Limpar erros
                    document.getElementById('passwordError').classList.remove('show');
                    
                    // Validações
                    if (!nomeCompleto || !email || !cpf || !password || !confirmPassword || !cargo) {
                        showNotification('Preencha todos os campos obrigatórios.', 'error');
                        return;
                    }
                    
                    if (!validarEmail(email)) {
                        showNotification('E-mail inválido.', 'error');
                        return;
                    }
                    
                    const cpfLimpo = cpf.replace(/\D/g, '');
                    if (cpfLimpo.length !== 11 || !validarCPF(cpfLimpo)) {
                        showNotification('CPF inválido.', 'error');
                        return;
                    }
                    
                    if (password.length < 6) {
                        showNotification('A senha deve ter pelo menos 6 caracteres.', 'error');
                        return;
                    }
                    
                    if (password !== confirmPassword) {
                        document.getElementById('passwordError').classList.add('show');
                        showNotification('As senhas não coincidem.', 'error');
                        return;
                    }
                    
                    // Verificar se já está cadastrado
                    const verificado = await verificarUsuarioCadastrado(email);
                    if (verificado.cadastrado) {
                        showNotification('Este e-mail já está cadastrado. Faça login.', 'warning');
                        setTimeout(() => {
                            window.location.href = 'login.html?email=' + encodeURIComponent(email);
                        }, 2000);
                        return;
                    }
                    
                    // Preparar dados do usuário
                    const usuario = {
                        nomeCompleto: nomeCompleto,
                        email: email,
                        cpfLimpo: cpfLimpo,
                        password: password,
                        cargo: cargo,
                        matricula: matricula || ''
                    };
                    
                    let resultado;
                    
                    if (isSupabaseConnected) {
                        // Tentar cadastrar no Supabase
                        resultado = await cadastrarUsuarioSupabase(usuario);
                    } else {
                        // Cadastrar localmente (sem senha por segurança)
                        const usuarioLocal = { ...usuario };
                        delete usuarioLocal.password; // Não salvar senha localmente
                        resultado = cadastrarUsuarioLocal(usuarioLocal);
                    }
                    
                    if (resultado.success) {
                        showNotification(resultado.message, 'success', 5000);
                        
                        // Salvar dados localmente se solicitado
                        if (document.getElementById('salvarDados').checked) {
                            localStorage.setItem('ponto_record_usuario', JSON.stringify(usuario));
                        }
                        
                        // Marcar como já cadastrado
                        localStorage.setItem(`usuario_cadastrado_${email}`, 'true');
                        
                        // Redirecionar para login após 3 segundos
                        setTimeout(() => {
                            showNotification('Redirecionando para login...', 'info', 2000);
                            setTimeout(() => {
                                window.location.href = 'login.html?email=' + encodeURIComponent(email);
                            }, 2000);
                        }, 3000);
                    } else {
                        showNotification(resultado.message, 'error');
                    }
                });
            }
        });
    </script>
</body>
</html>
